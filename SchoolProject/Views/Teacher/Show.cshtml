@model SchoolProject.Models.ViewModels.TeacherClass

@{
    ViewBag.Title = @Model.teacher.employeeNumber + ":" + @Model.teacher.teacherFname + @Model.teacher.teacherLname + " Details";
}

<h2>@Model.teacher.teacherFname @Model.teacher.teacherLname</h2>


<div class="nav-operations">
    <a class="navlink" href="/Teacher/Filter">Back To Teachers</a>
    <a class="del_link" href="/Teacher/DeleteConfirm/@Model.teacher.teacherId" title="Delete this teacher"><img src="~/Content/images/delete_black_48dp.svg" class="delete-btn-logo" /></a>
    <a class="del_link" href="/Teacher/UpdateTeacher/@Model.teacher.teacherId" title="Update this teacher"><img src="~/Content/images/edit_black_48dp.svg" class="edit-btn-logo" /></a>
</div>
<div class="detailed-list">
    <div>ID: @Model.teacher.teacherId</div>
    <div>First Name: @Model.teacher.teacherFname</div>
    <div>Last Name: @Model.teacher.teacherLname</div>
    <div>Employee Number: @Model.teacher.employeeNumber</div>
    <div>Date of Hiring: @Model.teacher.hireDate.ToString("d")</div>
    <div>Salary: @Model.teacher.salary $</div>
    <div></div>
    <div style="text-decoration:underline;font-size:1.2em">Courses taken by the faculty</div>

    <ul style="list-style:none">
        @if (@Model.classes.Count() == 0)
        {
            <li style="font-style:italic">This faculty is not teaching any course now</li>
        }

        @foreach (var class_ids in @Model.classes)
        {
            <li class="listOfClasses"><a href="/Classes/Show/@class_ids.classId">@class_ids.classname</a></li>
        }
    </ul>
</div>
