<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta name="description" content="A sample university school portal for reading the details of teachers, classes and students.">
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="https://unpkg.com/purecss@2.0.5/build/pure-min.css" />
    <link rel="stylesheet" href="@Url.Content("~/Content/CustomStyle.css")" />

    <style>
        @@media screen and (max-width: 480px) {
            .filter-column {
                flex: 1 0 99%;
            }

            .collapsible-div {
                text-align: right;
                margin-right: 20%;
            }

            input.Submit {
                display: block;
                margin: auto;
                margin-top: 10px;
            }
        }
    </style>
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/customscript.js" type="text/javascript" /></script>
    @*<script async src="https://www.googletagmanager.com/gtag/js?id=G-6V1DYS3MNN"></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag() { dataLayer.push(arguments); }
            gtag('js', new Date());

            gtag('config', 'G-6V1DYS3MNN');
        </script>*@

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("University Portal", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Teachers", "Index", "Teacher/Filter/", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Students", "Index", "Student/Filter/", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Classes", "Index", "Classes/Filter/", new { area = "" }, null)</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - University Portal Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
